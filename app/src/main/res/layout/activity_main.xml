<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewHolder.MainActivity"
    android:background="@drawable/background2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Flight Mate"
        android:textColor="@color/SpanishGray"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:typeface="serif"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/anything_anytime_anywhere_profession"
        android:textColor="@color/SpanishGray"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="serif-monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/grap_bg"
            android:textColor="@color/SpanishGray"
            android:text="@string/btnSignIn"
            android:shadowColor="@color/SpanishGray"
            android:layout_margin="8dp"
            />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/grap_bg"
            android:textColor="@color/SpanishGray"
            android:text="@string/btnSignUp"
            android:shadowColor="@color/SpanishGray"
            android:layout_margin="8dp"
            />

    </LinearLayout>


</RelativeLayout>